@{
    ViewBag.Title = "Home Page";
}

<div style="align-content:center">
    <table width="600">
        <tr>
            @using (Html.BeginForm("DownloadGame", "User", FormMethod.Get)) {
            <td width="300">
                <button type="submit" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.download</button>
            </td>
            }
            <td rowspan="3" width="300"><img src="~/Images/EpicWare%20Logos/EpicWare%20Logo.png" /></td>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("ListFriendRequest", "User", FormMethod.Get))
                {
                    <td width="300">
                        <button type="submit" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.pendentes</button>
                    </td>
                }
            }
        </tr>
        <tr>
            <td width="300">
                <button type="button" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.scores</button>
            </td>
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("ListIntrosFriendRequestMiddle", "User", FormMethod.Get))
                {
                    <td width="300">
                        <button type="submit" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.intros</button>
                    </td>
                }
            }
        </tr>
        <tr>
            @if (!Request.IsAuthenticated)
            {
                using (Html.BeginForm("Create","User",FormMethod.Get)) 
                { 
                <td width="300">
                    <button type="submit" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.registar</button>
                </td>
                }
            }
            else
            {
                <td width="300">&nbsp;</td>
            }
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("FriendsSugestion", "User", FormMethod.Get))
                {
                    <td width="300">
                        <button type="submit" class="btn btn-lg btn-primary" style="width:200px;">@EpicWareWeb.Views.User.User.friendsSugestion</button>
                    </td>
                }
            }
        </tr>
    </table>
    
    <br /><br />
    <table style="color:white; font-size:14px;">
        <tr>
            <td width="220" align="left" style="padding-left:0px;">
                <div class="alert alert-normal"><b>@EpicWareWeb.Views.User.User.tam_rede:</b> @ViewBag.numberUsers</div>
            </td>
        </tr>
    </table>

     <br />
    <img src="~/Images/Logos/tagcloud.png" width="80px" height="50px"/>
    @{
    var output = new System.Text.StringBuilder();
    output.Append(@"<div class="" tagcloud"">");
    using (var modelo = new EpicWareWeb.Models.EventsEntities())
        {
        EpicWareWeb.Models.TagCloudCounter tagCloud = modelo.GetTagCloud();
        <table width="1000">
                <tr>
                    <td><span style ="font-size:14px; color:white;">@EpicWareWeb.Views.User.User.tagcloudGeral :</span></td>
                    <td>
                        @foreach (EpicWareWeb.Models.TagCloud tag in tagCloud.TagClouds)
                        {
                            output.AppendFormat(@"<span class=""tag{0}"">",tagCloud.GetRankForTag(tag));
                            output.Append(tag.Tag);
                            output.Append("</span>&nbsp;");
                        }

                    </td>
                </tr>
         </table>   
        }
        output.Append("</div>");
    }
    @Html.Raw(output.ToString())


