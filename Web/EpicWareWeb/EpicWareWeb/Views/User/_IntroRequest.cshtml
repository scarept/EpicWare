@model EpicWareWeb.Models.IntroFriendRequest

<table width="500">
    <tr>
        <td>@EpicWareWeb.Views.User.User.sugestedby: </td><td>@Model.userB.userProfile.nickname</td>
    </tr>
    <tr>
        <td colspan="2">@Model.sendedBC</td>
    </tr>
    <tr>
        <td rowspan=3>
            <img src="@Model.userA.userProfile.pathImg" alt="No Image" />
        </td>
    </tr>
    <tr>
        <td>@EpicWareWeb.Views.User.User.name: @Model.userA.userProfile.name</td>
        <td>@EpicWareWeb.Views.User.User.lastname: @Model.userA.userProfile.lastName</td>
    </tr>
    <tr>
        <td></td>
        @using (Html.BeginForm("AcceptIntroFR", "User"))
        {
            <td><button type="submit" class="btn btn-success">@EpicWareWeb.Views.User.User.accept</button></td>
        }
        @using (Html.BeginForm("RejectIntroFR", "User"))
        {
            <td><button type="submit" class="btn btn-warning">@EpicWareWeb.Views.User.User.reject</button></td>
        }
    </tr>
</table>